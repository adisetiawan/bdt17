<div class="row">
	<div class="col-md-3">
		<ul style="margin-top:20px;" class="nav nav-pills nav-stacked">
  			<li role="presentation" class="active"><a href="/accounts">Dashboard</a></li>
			<li role="presentation"><a href="/accounts/blogs">My Blogs</a></li>
			<li role="presentation"><a href="/accounts/blogs/add">New Blog</a></li>
		</ul>
	</div>
  	<div class="col-md-9">
  		<h1>Update Blog Blog</h1>
  		<form method="post" action="/accounts/blogs/edit">
  			<div class="form-group">
			    <label for="title">Title</label>
			    <input type="text" class="form-control" name="title" placeholder="Blog Title" value="{{blog.title}}">
			</div>
			  <div class="form-group">
			    <label for="content">Content</label>
			    <textarea class="form-control" name="content" rows="10">{{blog.content}}</textarea>
			  </div>
				<input type="hidden" name="id" value="{{blog._id}}">
			  <button type="submit" class="btn btn-default">Update</button>
  		</form>
  	</div>
</div>

